<?xml version="1.0"?>
<layout version="0.1.0">
    <default>
        <reference name="head">
			<action method="addCss"><stylesheet>showproduct/css/pslider.css</stylesheet></action>			
			<action method="addItem"><type>skin_js</type><name>showproduct/js/jquery-1.7.2.min.js</name></action>
			<action method="addItem"><type>skin_js</type><name>showproduct/js/mst-jquery-noconflict.js</name></action>			
			<action method="addItem"><type>skin_js</type><name>showproduct/owl-carousel/owl.carousel.min.js</name></action>	
			<action method="addItem"><type>skin_js</type><name>showproduct/js/jquery.easytabs.min.js</name></action>			
			<action method="addItem"><type>skin_js</type><name>showproduct/js/jquery.hashchange.min.js</name></action>	
			<action method="addCss"><stylesheet>showproduct/owl-carousel/owl.theme.css</stylesheet></action>			
			<action method="addCss"><stylesheet>showproduct/owl-carousel/owl.carousel.css</stylesheet></action>			
			<action method="addCss"><stylesheet>showproduct/owl-carousel/owl.transitions.css</stylesheet></action>
		</reference>
	</default>
     <showproduct_index_index>
         <reference name="content">
             <block type="showproduct/showproduct" name="showproduct" template="showproduct/showproduct.phtml" />
         </reference>
		 <reference name="root">
			<action method="setTemplate">
			  <template>page/2columns-right.phtml</template> 
			</action>
		 </reference>
     </showproduct_index_index>
	<showproduct_index_show>
         <reference name="content">
             <block type="showproduct/showproduct" name="showproduct2" template="showproduct/showproduct2.phtml" />
         </reference>
     </showproduct_index_show>
	 
</layout>